<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/back"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:background="#212121"

            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical|center_horizontal|center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:text="Rate us"
                    android:textColor="#ecdfdf"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical|center_horizontal|center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="8dp"
                    android:text="Please provide your feedback !"
                    android:textColor="#d7c2c1"
                    android:textSize="14sp" />
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:backgroundTint="#ffd700"
                android:numStars="5"
                android:rating="4" />

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical|center_horizontal|center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#EEF4D11E"
                    android:focusable="false"
                    android:padding="12dp"
                    android:text="Support"
                    android:textColor="#A93EFF14"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:padding="12dp"
                    android:text="Later"
                    android:textColor="#057509"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:focusable="false"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:text="Rate now"
                    android:textColor="#09b80f"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>



</LinearLayout>
